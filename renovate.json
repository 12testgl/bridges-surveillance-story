{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "repositories": [
    "jesperancinha/bridge-logistics"
  ],
  "platform": "gitlab",
  "extends": [
    "docker:disable"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "groupName": "Angular Group",
      "matchPackagePrefixes": [
        "@angular/"
      ],
      "automerge": true
    }
  ]
}
