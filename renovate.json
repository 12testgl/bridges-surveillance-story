{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "repositories": [
    "jesperancinha/bridge-logistics"
  ],
  "platform": "gitlab",
  "extends": [
    "docker:disable"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "groupName": "Angular and types updates",
      "matchPackagePrefixes": [
        "@angular/",
        "@angular-devkit/",
        "@babel/",
        "@material/",
        "@schematics",
        "@ngx-translate/",
        "@testing-library/",
        "@types/",
        "ngx-markdown/",
        "moment",
        "tslib",
        "typescript",
        "rxjs",
        "codelyzer",
        "d3-color",
        "jest"
      ],
      "automerge": true
    },
    {
      "groupName": "Node Types Group",
      "matchPackagePrefixes": [
        "@types"
      ],
      "automerge": true
    }
  ]
}
